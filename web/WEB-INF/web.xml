        <servlet-name>SContact</servlet-name>
        <servlet-class>Control.SContact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SContact</servlet-name>
        <url-pattern>/Shop/Contact</url-pattern>
